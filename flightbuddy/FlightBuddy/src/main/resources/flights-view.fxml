<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>

<?import javafx.scene.control.Button?>
<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.flightbuddy.flightbuddy.FlightsController"
            prefWidth="700"
            prefHeight="400">

    <!-- GÓRNY PANEL: TYTUŁ + DATEPICKER -->
    <top>
        <HBox spacing="20" style="-fx-padding: 12; -fx-alignment: center-left;">
            <Label fx:id="titleLabel"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <DatePicker fx:id="datePicker" promptText="Wybierz datę lotu" />
            <Button fx:id="refreshButton" text="Odśwież" />
        </HBox>
    </top>

    <!-- ŚRODKOWY PANEL: SZUKAJ + LISTA LOTÓW -->
    <center>
        <VBox spacing="8" style="-fx-padding: 12;">
            <TextField fx:id="searchField" promptText="Szukaj lotu..." />
            <ScrollPane fitToWidth="true">
                <VBox fx:id="flightsBox" spacing="8" />
            </ScrollPane>
        </VBox>
    </center>

</BorderPane>
